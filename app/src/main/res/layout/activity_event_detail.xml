<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_event_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/wallet_dim_foreground_disabled_holo_dark"
    tools:context="com.gmail.shahidul.er.tourmate.Event.Activity.EventDetailActivity">

    <TextView
        android:id="@+id/eventTitleTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Event Detail"
        android:textSize="30sp"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#80000000"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
        <TextView
            android:id="@+id/eventIdTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Event Id:"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/eventIdDataTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#80000000"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/locationTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Location:"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/locationDataTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#80000000"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/BudgetTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Budget:"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/budgetDataTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textSize="20sp"
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#80000000"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal"

        >
        <TextView
            android:id="@+id/dateTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Start Date:"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/DateDataTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" "
            android:textSize="20sp"
            android:textStyle="bold"
         />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#80000000"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal"

        >
        <TextView
            android:id="@+id/dateEndTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="End Date:"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/DateEndDataTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" "
            android:textSize="20sp"
            android:textStyle="bold"
         />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#80000000"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal"

        >
        <TextView
            android:id="@+id/createdAt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Created At:"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/createdAtTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Email"
            android:textSize="20sp"
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal"

        >
        <Button
            android:id="@+id/eventDeleteBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Delete:"
            android:textSize="20sp"
            android:onClick="deleteAction"
            />
        <Button
            android:id="@+id/eventEditBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Edit"
            android:textSize="20sp"
            android:onClick="editAction"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal"

        >
        <Button
            android:id="@+id/eventExpenseBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Expense:"
            android:textSize="20sp"
            android:onClick="expenseAction"
            />
        <Button
            android:id="@+id/eventMomentBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Moment"
            android:textSize="20sp"
            android:onClick="momentAction"
            />
    </LinearLayout>
</LinearLayout>
